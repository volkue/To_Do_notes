<%- include("header"); -%>

    <div class="main">
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>
        <div class="box">
            <% newListItems.forEach (item=> { %>
                <form action="/delete" method="post">


                    <div class="item">
                        <input type="checkbox" value="<%= item._id%>" onChange="this.form.submit()" name="checkbox">
                        <p>
                            <%= item.name %>
                        </p>
                    </div>
                    <input type="hidden" name="listName" value=<%=listTitle %>> </input>
                </form>
                <% }) %>

                    <form action="/" method="post" class="item">
                        <input type="text" name="addList" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="list" value=<%=listTitle %>>+</button>

                    </form>
        </div>
    </div>
    <%- include("footer"); -%>